{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@eiog/ts-config/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "pkg-name": [
        "./packages/pkg-name/src/index.ts"
      ]
    },
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**",
    "**/playground/**",
    "**/example/**",
    "**/packages/components/**",
    "commitlint.config.cjs"
  ]
}
