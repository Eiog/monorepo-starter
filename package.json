{
  "name": "monorepo-starter",
  "version": "0.0.1-beta.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr stub",
    "demo": "npm -C demo run dev",
    "stub": "pnpm -r --parallel --filter=./packages/* run dev",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/*\" build",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "update-deps": "taze -w && pnpm i",
    "typecheck": "tsc --noEmit",
    "commit": "git pull && pnpm lint:fix && git add -A && pnpm cz && git push",
    "pre-commit": "git pull && pnpm lint-staged && pnpm cz && git push",
    "cz": "czg",
    "prepare": "husky install"
  },
  "dependencies": {
    "pkg-name": "workspace:*"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@eiog/eslint-config": "^0.0.1",
    "@eiog/ts-config": "^0.0.3",
    "@vitest/ui": "^0.31.4",
    "commitlint": "^17.6.5",
    "cz-git": "^1.6.1",
    "czg": "^1.6.1",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.31.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue,md}": [
      "eslint . --fix",
      "git add"
    ]
  }
}
